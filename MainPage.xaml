<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="LocationTrackerApp.MainPage"
             Title="Location Tracker Heatmap">

    <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="10" Padding="12">
        <Label Grid.Row="0"
               Text="{Binding StatusText}"
               FontAttributes="Bold" />

        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Label Text="Interval (sec):" VerticalOptions="Center" />
            <Entry WidthRequest="80" Keyboard="Numeric" Text="{Binding CaptureIntervalSeconds}" />
            <Label Text="Points:" VerticalOptions="Center" />
            <Label Text="{Binding PointCount}" FontAttributes="Bold" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <maps:Map x:Name="HeatMap"
                  Grid.Row="2"
                  IsShowingUser="True"
                  MapType="Street" />

        <Grid Grid.Row="3" ColumnDefinitions="*,*,*,*" ColumnSpacing="8">
            <Button Grid.Column="0" Text="Start" Command="{Binding StartCommand}" />
            <Button Grid.Column="1" Text="Stop" Command="{Binding StopCommand}" />
            <Button Grid.Column="2" Text="Refresh" Command="{Binding RefreshCommand}" />
            <Button Grid.Column="3" Text="Clear" Command="{Binding ClearCommand}" />
        </Grid>
    </Grid>
</ContentPage>
